<Window x:Class="ClipboardSync.WindowsAgent.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClipboardSync Settings" Height="270" Width="520"
        WindowStartupLocation="CenterScreen">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>

    <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center">Server URL</TextBlock>
    <TextBox Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" Name="ServerUrlText" />

    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center">Device name</TextBlock>
    <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" Name="DeviceNameText" />

    <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" VerticalAlignment="Center">Device ID</TextBlock>
    <TextBox Grid.Row="2" Grid.Column="1" Margin="0,0,0,10" Name="DeviceIdText" IsReadOnly="True" />

    <CheckBox Grid.Row="3" Grid.Column="1" Margin="0,0,0,10" Name="PublishEnabledCheck">
      Publish local clipboard changes
    </CheckBox>

    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Width="90" Margin="0,10,10,0" Name="SaveButton" Click="SaveButton_Click">Save</Button>
      <Button Width="90" Margin="0,10,0,0" Name="CloseButton" Click="CloseButton_Click">Close</Button>
    </StackPanel>
  </Grid>
</Window>


